Algoritmo "semnome"

Var
   sucessor:inteiro

   soma:inteiro
   subtracao:inteiro
   numero:inteiro

Inicio
   escreva("digite um numero")
   leia(numero)
   escreval
   soma <- numero + 1
   subtracao <- numero - 1
   escreval
   escreval("sucessor:", soma)
   escreval("antecessor", subtracao)

Fimalgoritmo